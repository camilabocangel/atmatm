<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deposito">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/depositoActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cuantoRetira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuánto desea retirar de su cuenta?"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp">
        </TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/veinteRetiro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cuantoRetira"
            app:layout_constraintStart_toStartOf="@id/cuantoRetira"
            android:layout_marginTop="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradienthome">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Bs"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cincuentaRetiro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cuantoRetira"
            app:layout_constraintStart_toEndOf="@id/veinteRetiro"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradienthome">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Bs"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cienRetiro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/veinteRetiro"
            app:layout_constraintStart_toStartOf="@id/veinteRetiro"
            android:layout_marginTop="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradienthome">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Bs"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/doscientosRetiro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cincuentaRetiro"
            app:layout_constraintStart_toStartOf="@id/cincuentaRetiro"
            android:layout_marginTop="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradienthome">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Bs"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/montoRetiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Otro monto: "
            app:layout_constraintTop_toBottomOf="@id/cienRetiro"
            app:layout_constraintStart_toStartOf="@id/cuantoRetira"
            android:layout_marginTop="30dp">
        </TextView>
        <EditText
            android:id="@+id/editMontoRetiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Establezca un monto"
            app:layout_constraintTop_toBottomOf="@id/montoRetiro"
            app:layout_constraintStart_toStartOf="@id/montoRetiro"
            android:layout_marginTop="20dp"
            android:inputType="number">
        </EditText>
        <Button
            android:id="@+id/siguienteRetiro"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/celeste"
            android:text="Siguiente"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/editMontoRetiro"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="30dp">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>